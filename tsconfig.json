{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "removeComments": false,
    "noLib": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "useUnknownInCatchVariables": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./lib",
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "tests"]
}
